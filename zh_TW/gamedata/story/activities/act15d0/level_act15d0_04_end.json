        },
        {
            "id": 39,
            "prop": "Character",
            "attributes": {
                "name": "char_108_silent_1#3",
                "name2": "char_242_mayer#2",
                "focus": 2.0
            }
        },
        {
            "id": 40,
            "prop": "name",
            "attributes": {
