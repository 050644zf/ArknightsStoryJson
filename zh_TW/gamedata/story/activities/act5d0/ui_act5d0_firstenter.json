                "focus": 1.0
            }
        },
        {
            "id": 25,
            "prop": "name",
            "attributes": {
                "content": "   給我閉嘴。",
                "name": "甘比諾"
            }
        },
        {
            "id": 26,
            "prop": "Character",
            "attributes": {
                "name": "avg_npc_028",
                "name2": "avg_npc_027",
                "focus": 2.0
            }
        },
        {
            "id": 27,
            "prop": "name",
            "attributes": {
                "content": "   閉嘴？你昨晚怎麼不知道閉嘴？那樣能省不少事，真的。",
                "name": "卡彭"
            }
        },
        {
            "id": 28,
            "prop": "Character",
            "attributes": {
                "name": "avg_npc_028#3",
                "name2": "avg_npc_027",
                "focus": 1.0
            }
        },
        {
            "id": 29,
            "prop": "CameraShake",
            "attributes": {
                "duration": 0.4,
                "xstrength": 0.0,
                "ystrength": 8.0,
                "vibrato": 30.0,
