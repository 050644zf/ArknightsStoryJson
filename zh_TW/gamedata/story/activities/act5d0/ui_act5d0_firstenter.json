        },
        {
            "id": 23,
            "prop": "name",
            "attributes": {
                "content": "   你又想賴帳了嗎？",
                "name": "卡彭"
            }
        },
        {
            "id": 24,
            "prop": "Character",
            "attributes": {
                "name": "avg_npc_028",
