        {
            "id": 75,
            "prop": "Character",
            "attributes": {
                "name": "char_348_ceylon_4#7",
                "name2": "char_145_prove_1",
                "focus": 1.0
            }
        },
        {
            "id": 76,
            "prop": "name",
            "attributes": {
                "content": "   這裡一直都是這樣，怎麼會......",
                "name": "錫蘭"
