        {
            "id": 76,
            "prop": "name",
            "attributes": {
                "content": "  ！　――待て、あれは……",
                "name": "ドーベルマン"
            },
            "figure_art": "char_130_doberm_ex"
        },
        {
            "id": 77,
            "prop": "Character",
            "attributes": {
                "name": "char_014_riope"
            }
        },
        {
            "id": 78,
            "prop": "name",
            "attributes": {
                "content": "   ……Dr.{@nickname}、正面に敵方の軽装甲部隊を確認した。",
                "name": "Ace"
            },
            "figure_art": "char_130_doberm_ex"
        },
        {
